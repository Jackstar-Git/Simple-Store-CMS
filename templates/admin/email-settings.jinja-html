<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="{{ url_for('internal.uploads', filename='Logo.png') }}" type="image">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/admin/settings.css') }}">
    <title>Admin Panel - Birdie Club GmbH</title>
</head>
<body>
    <div class="main-container">
        {% include "admin/sidebar.jinja-html" %}
        
        <div class="main-content">
            <h2>Allgemeine Einstellungen</h2>
            
            <!-- Einstellungsformular -->
            <form class="settings-form" method="POST" enctype="multipart/form-data">
                <input type="hidden" id="csrf_token" name="csrf_token" value="{{ generate_token() }}">

                <!-- E-Mail-Adresse -->
                <div class="form-group">
                    <label for="email">E-Mail-Adresse:</label>
                    <input type="email" id="email" name="email" value="{{ settings['email_settings']['address'] }}" required>
                </div>

                <!-- E-Mail-Passwort -->
                <div class="form-group">
                    <label for="email_password">E-Mail-Passwort:</label>
                    <div class="password-wrapper">
                        <input type="password" id="email_password" name="email_password" value="{{ settings['email_settings']['password'] }}" required>
                        <i class="fas fa-eye password-toggle"></i>
                    </div>
                </div>

                <!-- SMTP-Server -->
                <div class="form-group">
                    <label for="smtp_server">SMTP-Server:</label>
                    <input type="text" id="smtp_server" name="smtp_server" value="{{ settings['email_settings']['smtp-server'] }}" required>
                </div>

                <!-- SMTP-Port -->
                <div class="form-group">
                    <label for="smtp_port">SMTP-Port:</label>
                    <input type="number" id="smtp_port" name="smtp_port" value="{{ settings['email_settings']['smtp-port'] }}" required>
                </div>

                <!-- Einstellungen speichern Button -->
                <div class="form-group">
                    <button type="submit" class="btn"><i class="fa-solid fa-floppy-disk"></i> Einstellungen speichern</button>
                </div>
            </form>
        </div>
    </div>

    <script src="{{ url_for('static', filename='js/admin/settings.js') }}"></script>
</body>
</html>
